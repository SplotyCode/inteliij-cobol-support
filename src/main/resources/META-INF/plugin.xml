<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>de.scandurra.inteliij-cobol-support</id>

    <name>COBOL</name>
    <vendor>David</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Provides basic syntax highlighting for COBOL.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyMessageBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="COBOL"
                  language="COBOL"
                  implementationClass="de.scandurra.inteliijcobolsupport.CobolFileType"
                  fieldName="INSTANCE"
                  extensions="cob;cbl"/>
        <lang.parserDefinition
                language="COBOL"
                implementationClass="de.scandurra.inteliijcobolsupport.CobolParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="COBOL"
                implementationClass="de.scandurra.inteliijcobolsupport.highlight.CobolSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="de.scandurra.inteliijcobolsupport.highlight.CobolColorSettingsPage"/>
    </extensions>
</idea-plugin>